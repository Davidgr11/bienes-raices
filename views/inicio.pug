extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")


block contenido
    div(class="py-5 ")
        h1(class="text-center text-5xl font-extrabold text-indigo-700 tracking-tight font-['Montserrat'] mb-6") Ubicación en el Mapa

        div(class="flex flex-col md:flex-row items-center py-10 gap-6 bg-white rounded-xl shadow-lg px-6")
            h2(class="text-base uppercase text-gray-800 font-bold mb-2 md:mb-0") Filtrar Propiedades:

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorías
                select(id="categorias" class="flex-1 bg-white w-full px-3 py-2 border-2 border-indigo-200 rounded-md shadow focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition")
                    option(value="") - Seleccione -
                    each categoria in categorias
                        option(value=categoria.id )= categoria.nombre

            div(class="w-full md:w-auto flex items-center gap-2")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(id="precios" class="flex-1 bg-white w-full px-3 py-2 border-2 border-indigo-200 rounded-md shadow focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition")
                    option(value="") - Seleccione -
                    each precio in precios
                        option(value=precio.id )= precio.nombre

        div(id="mapa-inicio" class="h-[600px] mt-5 rounded-xl shadow-lg overflow-hidden")

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Casas en Venta

            div(class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas
                    include ./templates/card

        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Departamentos en Venta

            div(class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in departamentos
                    include ./templates/card

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")