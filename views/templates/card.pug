div(class="bg-white shadow rounded-lg flex flex-col h-full")
    img(class="object-cover h-56 sm:h-64 md:h-72 w-full rounded-t-lg" src=`/uploads/${propiedad.imagen}` alt=` imagen casa ${propiedad.titulo}`)
    div(class="p-5 space-y-5 flex-1 flex flex-col justify-between")
        h3(class="text-xl md:text-2xl font-bold line-clamp-2")= propiedad.titulo
        div(class="flex flex-wrap gap-2 text-sm text-gray-600")
            p Habitaciones: 
                span(class="text-gray-800 font-bold")= propiedad.habitaciones
            p WC: 
                span(class="text-gray-800 font-bold")= propiedad.wc
        p(class="text-sm text-gray-600") Precio:  
            span(class="text-gray-800 font-bold")= propiedad.precio.nombre
        a(href=`/propiedad/${propiedad.id}` class="bg-indigo-600 w-full text-center block font-bold text-white p-2 uppercase rounded mt-4 hover:bg-indigo-700 transition-colors") Ver Propiedad 