

header.bg-white.shadow-md.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/" class="flex items-center gap-2")
            img(src="/img/logo.svg" alt="Logo Bienes Raices" class="h-10 w-10 drop-shadow-md animate-bounce")
            h1.text-3xl.font-extrabold.text-indigo-700.tracking-tight.font-['Montserrat'] Bienes
                span.font-normal.text-gray-700 Raices

        // Botón hamburguesa para móviles
        button(type="button" class="md:hidden flex items-center px-3 py-2 border rounded text-indigo-700 border-indigo-700" aria-label="Abrir menú" onclick="document.getElementById('nav-admin').classList.toggle('hidden')")
            svg(class="h-6 w-6 fill-current" viewBox="0 0 24 24")
                path(d="M4 6h16M4 12h16M4 18h16")

        nav#nav-admin(class="my-5 text-base md:flex md:items-center md:gap-6 font-bold text-indigo-700 hidden flex-col md:flex-row absolute md:static top-16 left-0 w-full md:w-auto bg-white md:bg-transparent z-50 shadow md:shadow-none")
            a(href="/mis-propiedades" class="hover:text-indigo-500 transition-colors py-2 md:py-0 px-4 md:px-0 w-full md:w-auto text-center") Mis Propiedades
            a(href="" class="hover:text-indigo-500 transition-colors py-2 md:py-0 px-4 md:px-0 w-full md:w-auto text-center") Mi Perfil

            form(action="/auth/cerrar-sesion" method="POST" class="inline w-full md:w-auto text-center")
                input(type="hidden" name="_csrf" value=csrfToken )
                input(type="submit" class="bg-indigo-800 py-2 px-6 rounded-lg font-bold cursor-pointer text-white hover:bg-indigo-600 transition-colors w-full md:w-auto" value="Cerrar Sesión")