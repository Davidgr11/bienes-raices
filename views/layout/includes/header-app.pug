

header.bg-white.shadow-md.p-4
    .container.mx-auto.flex.justify-between.items-center
        a(href="/" class="flex items-center gap-2")
            img(src="/img/logo.svg" alt="Logo Bienes Raices" class="h-10 w-10 drop-shadow-md animate-bounce")
            h1.text-3xl.font-extrabold.text-indigo-700.tracking-tight Bienes
                span.font-normal.text-gray-700 Raices

        // Botón hamburguesa para móviles
        button(type="button" class="md:hidden flex items-center px-3 py-2 border rounded text-indigo-700 border-indigo-700" aria-label="Abrir menú" onclick="document.getElementById('nav-app').classList.toggle('hidden')")
            svg(class="h-6 w-6 fill-current" viewBox="0 0 24 24")
                path(d="M4 6h16M4 12h16M4 18h16")

        nav#nav-app(class="my-5 text-base md:flex md:items-center md:gap-6 font-bold text-indigo-700 hidden flex-col md:flex-row absolute md:static top-16 left-0 w-full md:w-auto bg-white md:bg-transparent z-50 shadow md:shadow-none")
            a(href="/auth/registro" class="hover:text-indigo-500 transition-colors py-2 md:py-0 px-4 md:px-0 w-full md:w-auto text-center") Crear Cuenta
            a(href="/auth/login" class="hover:text-indigo-500 transition-colors py-2 md:py-0 px-4 md:px-0 w-full md:w-auto text-center") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-4 items-center")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white") Casas 
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white") Departamentos 
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white") Bodegas 
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white") Terrenos 
            a(href="/categorias/5" class="text-sm font-bold uppercase text-white") Cabañas 

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value= csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white") Búsqueda
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="p-2 rounded-lg shadow text-sm")

            input(type="submit" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg text-white uppercase font-bold p-2 cursor-pointer text-sm" value="Buscar") 